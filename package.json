{
  "name": "just-breathe",
  "version": "1.0.0",
  "description": "A minimal, science-based breathing meditation app built with vanilla web technologies - no ads, no accounts, just simple guided breathing.",
  "main": "index.js",
  "scripts": {
    "dev": "http-server -c-1 -a 0.0.0.0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage && open coverage/index.html",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update": "playwright test --update-snapshots",
    "deploy": "gh-pages -d ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielabar/just-breathe.git"
  },
  "author": "Daniela Baron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielabar/just-breathe/issues"
  },
  "homepage": "https://github.com/danielabar/just-breathe#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@vitest/coverage-v8": "^3.2.4",
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.58.2",
    "vitest": "^3.2.4"
  }
}
